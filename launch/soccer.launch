<?xml version="1.0"?>
<launch>
  <!-- Soccer field world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find walle)/worlds/soccer_field.world"/>
  </include>

  <!-- Soccer robots -->
  <include file="$(find walle)/launch/robot.launch">
    <arg name="robot_name" default="home1"/>
    <arg name="jersey_color" default="Blue"/>
    <arg name="x" default="-0.5"/>
  </include>
  <include file="$(find walle)/launch/robot.launch">
    <arg name="robot_name" default="home2"/>
    <arg name="jersey_color" default="Green"/>
    <arg name="x" default="-1.0"/>
  </include>
  <include file="$(find walle)/launch/robot.launch">
    <arg name="robot_name" default="away1"/>
    <arg name="jersey_color" default="Red"/>
    <arg name="x" default="0.5"/>
  </include>
  <include file="$(find walle)/launch/robot.launch">
    <arg name="robot_name" default="away2"/>
    <arg name="jersey_color" default="Purple"/>
    <arg name="x" default="1.0"/>
  </include>

  <!-- Soccer ball -->  
  <include file="$(find walle)/launch/ball.launch">
  </include>
</launch>




