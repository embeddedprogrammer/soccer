<?xml version="1.0"?>
<!-- Soccer Robot -->
<robot name="soccer_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:property name="PI" value="3.1415926535897931"/>
  <xacro:macro name="wheel" params="namespace parent id mass radius thickness xyz yaw">

    <link name="${namespace}/wheel${id}">
      <collision name="collision">
        <geometry>
          <cylinder
            radius="${radius}"
            length="${thickness}"/>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <box size="${radius*.707} ${radius*.707} ${thickness}"/>
        </geometry>
      </visual>
      <inertial>
        <mass value="${mass}"/>
        <inertia
          ixx="${mass/12 * (3*radius*radius + thickness*thickness)}" ixy="0.0" ixz="0.0"
          iyy="${mass/12 * (3*radius*radius + thickness*thickness)}" iyz="0.0"
          izz="${mass*radius*radius/2}"/>
      </inertial>
    </link>

    <joint type="continuous" name="${namespace}/joint${id}">
      <origin xyz="${xyz}" rpy="0 ${PI/2} ${yaw}"/>
      <parent link="${namespace}/${parent}"/>
      <child link="${namespace}/wheel${id}"/>
      <axis xyz="0 0 1"/>
    </joint>

    <transmission name="${namespace}/tran${id}">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${namespace}/joint${id}">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${namespace}/motor${id}">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
  </xacro:macro>
</robot>
