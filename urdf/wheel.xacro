<?xml version="1.0"?>
<!-- Soccer Robot -->
<robot name="soccer_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:property name="PI" value="3.1415926535897931"/>
  <xacro:macro name="wheel" params="parent id mass radius thickness xy yaw axis">

    <link name="wheel${id}">
      <collision name="collision">
        <geometry>
          <cylinder
            radius="${radius}"
            length="${thickness}"/>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <box size="${radius*.707} ${radius*.707} ${thickness}"/>
        </geometry>
      </visual>
      <inertial>
        <mass value="${mass}"/>
        <inertia
          ixx="${mass/12 * (3*radius*radius + thickness*thickness)}" ixy="0.0" ixz="0.0"
          iyy="${mass/12 * (3*radius*radius + thickness*thickness)}" iyz="0.0"
          izz="${mass*radius*radius/2}"/>
      </inertial>
    </link>

    <gazebo reference="wheel${id}">
      <material>Gazebo/Red</material>
    </gazebo>

    <link name="spinner${id}">
      <collision name="collision">
        <geometry>
          <cylinder
            radius="${radius}"
            length="${thickness}"/>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <box size="${radius*.707} ${radius*.707} ${thickness}"/>
        </geometry>
      </visual>
      <inertial>
        <mass value="${mass}"/>
        <inertia
          ixx="${mass/12 * (3*radius*radius + thickness*thickness)}" ixy="0.0" ixz="0.0"
          iyy="${mass/12 * (3*radius*radius + thickness*thickness)}" iyz="0.0"
          izz="${mass*radius*radius/2}"/>
      </inertial>
    </link>    

    <joint type="continuous" name="joint${id}">
      <origin xyz="${xy} ${radius}" rpy="0 ${PI/2} 0"/>
      <parent link="${parent}"/>
      <child link="wheel${id}"/>
      <axis xyz="0 0 1"/>
    </joint>

    <joint type="fixed" name="spinnerjoint${id}">
      <origin xyz="-.1 0 0" rpy="0 0 0"/>
      <parent link="wheel${id}"/>
      <child link="spinner${id}"/>
    </joint>    

    <transmission name="tran${id}">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="joint${id}">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="motor${id}">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
  </xacro:macro>
</robot>
